<section class="form-section d-flex flex-column align-items-center">
<h2 class="text fw-bolder">Sign up</h2>
<div class="form-signin w-25">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "") do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-floatin mx-2">
    <%= f.label :email, class: "py-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-floatin mx-2">
    <%= f.label :name, class: "py-2" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="form-floatin mx-2">
    <%= f.label :password, class: "py-2"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-floatin mx-2">
    <%= f.label :password_confirmation, class: "py-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions m-2 d-flex justify-content-between w-100 align-items-center">
    <%= f.submit "Sign in", class: "btn btn-warning" %>
    <div class="bar-c"> <p class="log-bar"></p>or<p class="log-bar"></p></div>
    <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-primary"  %>
  </div>
<% end %>
<%= render "users/shared/links" %>
</div>


</section>

