<h2>Signn up</h2>

<section class="form-signin w-50">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "") do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-floatin">
    <%= f.label :email, class: "py-2" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-floatin">
    <%= f.label :password , class: "py-2"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-floatin">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-primary m-2"%>
  </div>
<% end %>

</section>

<%= render "users/shared/links" %>
